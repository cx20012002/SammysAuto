@model IEnumerable<ServiceType>

@{
   ViewBag.Title = "title";
   Layout = "_Layout";
}

<br>
<h2>Manage Service Types</h2>
<hr>

<div class="form-border">
   <p>
      <a class="btn btn-sm btn-primary" asp-action="Create">Create New</a>
   </p>
   <br>
   <table class="table table-hover table-condensed">
      <tr>
         <th>
            @Html.DisplayNameFor(m => m.Name)
         </th>
         <th></th>
         <th></th>
      </tr>
      @foreach (var item in Model)
      {
         <tr>
            <td>
               @Html.DisplayFor(m => item.Name)
            </td>
            <td>
               @await Html.PartialAsync("_TableButtonPartial", new IndividualButtonPartial{ServiceId = item.Id})
            </td>
         </tr>
      }
   </table>
</div>